{
    "author": "Mayur Kukadiya",
    "name": "Easy Translate",
    "description": "Easy to translate by just select it and choose option",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["contextMenus", "tabs"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "images/16.png",
            "32": "images/32.png",
            "48": "images/48.png",
            "128": "images/128.png"
        }
    },
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
    }
}